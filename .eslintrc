{
  "env": {
    "node": true,
    "jest/globals": true
  },
  "plugins": ["jest"],
  "extends": [
    "eslint:recommended",
    "standard"
  ],
  "rules": {
    "quotes": [2, "double"],
    "semi": [2, "always"],
    "no-console": 0,
    "comma-dangle": 0,
    "global-require": 0,
    "no-trailing-spaces": ["error", { "skipBlankLines": true }],
    "max-len": ["error", 121],
    "arrow-parens": 0,
    "template-curly-spacing": 0,
    "no-confusing-arrow": 0,
    "space-before-function-paren": 0,
    "standard/no-callback-literal": 0,
    "camelcase": 0,
    "no-return-await": 0
  }
}
